services:
  syncthing:
    image: lscr.io/linuxserver/syncthing:1.29.6
    container_name: syncthing
    hostname: nas
    restart: always
    ports:
      - 22000:22000/tcp
      - 22000:22000/udp
      - 8384:8384
    volumes:
      - /mnt/ssd/docker/syncthing/config:/config
      - /mnt/hdd:/mnt/hdd
      - /mnt/ssd:/mnt/ssd
    environment:
      - TZ=Etc/UTC
      - PGID=1000
      - PUID=1000
