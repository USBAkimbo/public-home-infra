# *arr API Configuration
# Configure one or both applications to monitor
# The script will automatically monitor any application with both API_URL and API_KEY configured

# Sonarr Configuration
# The base URL of your Sonarr instance (without trailing slash)
SONARR_API_URL=http://localhost:8989

# Your Sonarr API key (found in Settings -> General -> Security)
SONARR_API_KEY={{ SONARR_API_KEY }}

# Radarr Configuration
# The base URL of your Radarr instance (without trailing slash)
RADARR_API_URL=http://localhost:7878

# Your Radarr API key (found in Settings -> General -> Security)
RADARR_API_KEY={{ RADARR_API_KEY }}

# Discord Webhook Configuration
# The Discord webhook URL to send notifications to
DISCORD_WEBHOOK_URL={{ ARR_READER_DISCORD_WEBHOOK_URL }}

# Blacklisted Extensions
# Comma-separated list of file extensions to blacklist (without dots)
# Examples: exe,zip,scr,com,bat,cmd,pif,vbs,js
BLACKLISTED_EXTENSIONS=exe,zip,scr,com,bat,cmd,pif,vbs,js

# Block files with no extension (true/false)
# When true, files without any file extension will be blocked
# Default: true
BLOCK_NO_EXTENSION=true

# Queue Delete Options
# These options control what happens when a bad download is reaped

# Remove the download from the download client (true/false)
# Default: true
REMOVE_FROM_CLIENT=true

# Add the release to the blocklist to prevent it from being downloaded again (true/false)
# Default: true
BLOCKLIST=true

# Skip automatic redownload of another release for this episode (true/false)
# Default: false
SKIP_REDOWNLOAD=false

# Change the category of the download in the download client (true/false)
# Default: false
CHANGE_CATEGORY=false

# Stuck Download Detection (true/false)
# When enabled, detects downloads that are stuck (no timeleft field and size hasn't changed between runs)
# The script tracks downloads without a timeleft field and compares their remaining size (sizeleft)
# If the size hasn't changed on the next run, the download is considered stuck and will be removed
# Default: true
REMOVE_STUCK_DOWNLOADS=true

# Dangerous Status Messages Detection (true/false)
# When enabled, automatically removes downloads without valid extensions that have dangerous status messages
# Dangerous messages indicate potential malware (executable files, suspicious extensions, archives)
# If a download without an extension has a non-dangerous status message, it will be flagged for manual review
# Default: true
BLOCK_DANGEROUS_STATUS_MESSAGES=true